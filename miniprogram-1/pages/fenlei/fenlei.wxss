/* pages/fenlei/fenlei.wxss */
/**分类栏**/
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
  }
  .left-navbar{
    position:absolute;
    left:0;
    width:25%;
    height:100%;
    background-color:#eee;
    font-size:14px;
  }
  .left-navbar view{
    height:100rpx;
    line-height: 100rpx;
    text-align: center;
  }
  .active{
    background-color:#FFF;
    color:red;
    font-size:15px;
  }
  #right{
    position:absolute;
    right:0;
    width:75%;
    height:90%;
  }
  .goods-list{
    display:flex;
    flex-wrap:wrap;
    margin-top:30rpx;
  }
  .goods-title{
    width:100%;
    font-size:15px;
    font-weight:bold;
    padding-left:10rpx;
  }
  .goods{
    width:150rpx;
    font-size:14px;
    margin:15rpx;
    text-align:center;
  }
  .img{
    width:140rpx;
    height:140rpx;
  }
   